{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Opa": {
    "AllowedHeaders": [
      ".*"
    ],
    "Compiler": {
      "OutputPath": "./build",
      "Debug": true,
      "RegoVersion": "V1"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "allow": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "Opa/example/allow",
        "Match": {
          "Path": "/allow"
        }
      },
      "deny": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "Opa/example/deny",
        "Match": {
          "Path": "/deny"
        }
      },
      "path": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "Opa/example/path",
        "Match": {
          "Path": "/path/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "https://example.com/"
          }
        }
      }
    }
  }
}
